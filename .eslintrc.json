{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "import/extensions": ["error", "always", {"ignorePackages": true} ],
        "react/react-in-jsx-scope": "off",
        "no-underscore-dangle": 0,
        "react/prop-types": [0],

        "react/jsx-no-bind": 0
    }
}
